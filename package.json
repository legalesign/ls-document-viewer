{
  "name": "legalesign-document-viewer",
  "version": "0.2.18",
  "description": "Legalesign Document Editor/Viewer",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/ls-document-viewer/ls-document-viewer.esm.js",
  "exports": {
    ".": {
      "import": "./dist/ls-document-viewer/ls-document-viewer.esm.js",
      "require": "./dist/ls-document-viewer/ls-document-viewer.cjs.js"
    },
    "./dist/*": {
      "import": "./dist/*",
      "types": "./dist/*"
    },
    "./components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs",
      "types": "./loader/index.d.ts"
    },
    "./styles": "./dist/ls-document-viewer/ls-document-viewer.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stenciljs/component-starter.git"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "publish": "npm publish --scope=public"
  },
  "devDependencies": {
    "@stencil/core": "^4.36.2",
    "@stencil/react-output-target": "^1.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.17.1",
    "puppeteer": "^24.16.1",
    "rollup-plugin-node-polyfills": "^0.2.1"
  },
  "license": "MIT",
  "dependencies": {
    "@jest/transform": "^30.0.5",
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "2.5.207"
  }
}
